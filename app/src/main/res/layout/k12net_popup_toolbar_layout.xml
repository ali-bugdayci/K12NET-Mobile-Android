<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#04b7bb">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/torquese_button_flat"
        android:gravity="center|left"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lyt_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/torquese_button_flat"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="15dp"
            android:paddingLeft="15dp">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:src="@drawable/arrow_previous_white" />
        </LinearLayout>

        <com.k12nt.k12netframe.component.AsistoTextView
            android:id="@+id/txt_toolbar_title"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAppearance="@style/Asisto_MediumLabelWhite"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:lines="1"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lyt_option_buttons"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dashmenuIconSize"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:gravity="center|left"
        android:orientation="vertical">

    </LinearLayout>

</RelativeLayout>